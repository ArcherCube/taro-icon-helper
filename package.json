{
  "name": "taro-icon-helper",
  "version": "0.0.2",
  "description": "在taro项目中以React组件形式使用svg作为Icon",
  "type": "module",
  "bin": {
    "taro-icon-helper": "./dist/bin/cli.js"
  },
  "repository": "git@github.com:ArcherCube/taro-icon-helper.git",
  "license": "MIT",
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:gulp": "gulp",
    "build": "pnpm build:clean && pnpm build:gulp",
    "commitlint": "commitlint --edit",
    "lint": "eslint --ext .js,.ts  --max-warnings 0 \"./\" ",
    "tsc": "tsc -p ./tsconfig.json --noEmit",
    "commit": "git-cz",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "taro",
    "icon",
    "svg",
    "react"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "author": "ArcherCube",
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "oslllo-potrace": "^4.0.0",
    "oslllo-svg2": "^4.0.0",
    "piscina": "^4.8.0",
    "svgtofont": "^6.2.0"
  },
  "peerDependencies": {
    "@tarojs/taro": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "commitizen": "^4.3.1",
    "commitlint": "^19.5.0",
    "cz-git": "^1.11.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cli": "^2.3.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
